<!-- RIPAAP DATA -->
<div id="data" class="mt-5 section">
    <div class="row">
        <div class="col-10">
            <h3>RIPAAP Records</h3>
        </div>
        <div class="col-2 text-right">
            <button class="btn btn-outline-success" data-toggle="modal" data-target="#addDataModal">
                <i class="fa fa-plus"></i> Data</button>
        </div>
    </div>
    <form action="#" method="POST" id="filterDataForm">
        <div class="row w-75 mx-auto mb-3">
            <div class="col-2 h4 py-1 text-right">
                Filter By
            </div>
            <div class="col-2">
                <select name="filterTestName" id="filterTestName"
                    class="form-control custom-select">
                    <option value="" disabled>Test Name</option>
                    <option value="hemoglobin">Hemoglobin</option>
                    <option value="whiteBloodCells">White Blood Cells</option>
                    <option value="platelets">Platelets</option>
                </select>
            </div>
            <div class="col-2">
                <select name="filterGender" id="filterGender" class="form-control custom-select">
                    <option value="" disabled>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <div class="col-2">
                <select name="filterCountry" id="filterCountry" class="form-control custom-select">
                    <option value="*">All</option>
                    <option value="male">Ghana</option>
                    <option value="female">Kenya</option>
                </select>
            </div>
            <div class="col-2 text-right">
                <input type="submit" value="Filter" class="btn btn-info rip-shadow">
            </div>
        </div>
    </form>

    <table class="table table-responsive table-striped mt-4 pl-3" id="dataTable">
        <thead>
            <tr>
                <th>Age</th>
                <th>Lower Ref Limit</th>
                <th>Upper Ref Limit</th>
                <th>Analyser</th>
                <th>Sample Size</th>
                <th>Country</th>
                <th>Link to Publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>3 - 6 months</td>
                <td>9.3</td>
                <td>12.8</td>
                <td></td>
                <td>218 </td>
                <td>Schmidt et al., 2018 (South Africa)</td>
                <td><a href="https://doi.org/10.1111/tmi.13009" target="_blank"
                        rel="noreferrer noopener">
                        https://doi.org/10.1111/tmi.13009
                    </a></td>
                <td>
                    <div class="text-center" data-dataid="data-asdaq33wf252asd23">
                        <button class="btn btn-outline-info py-0 rip-shadow edit-data"
                            data-toggle="modal" data-target="#editDataModal">
                            <i class="fa fa-pencil-alt"></i></button> &nbsp;
                        <button class="btn btn-outline-danger py-0 rip-shadow delete-data"
                            data-toggle="modal" data-target="#deleteDataModal">
                            <i class="fa fa-trash"></i></button>
                    </div>
                </td>
            </tr>
            <tr>
                <td>16 - 17 </td>
                <td>11.1</td>
                <td>16.7</td>
                <td></td>
                <td>132</td>
                <td>Odhiambo et al., 2015 (Kenya)</td>
                <td><a href="https://doi.org/10.1371/journal.pone.0123140" target="_blank"
                        rel="noreferrer noopener">
                        https://doi.org/10.1371/journal.pone.0123140
                    </a>
                </td>
                <td>
                    <div class="text-center" data-dataid="data-asdaq33wf252a4w37u">
                        <button class="btn btn-outline-info py-0 rip-shadow edit-data"
                            data-toggle="modal" data-target="#editDataModal">
                            <i class="fa fa-pencil-alt"></i></button> &nbsp;
                        <button class="btn btn-outline-danger py-0 rip-shadow delete-data"
                            data-toggle="modal" data-target="#deleteDataModal">
                            <i class="fa fa-trash"></i></button>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>


    <!--DELETE DATA MODAL-->
    <div class="modal fade" id="deleteDataModal" tabindex="-1" role="dialog"
        aria-labelledby="deleteData" aria-hidden="true" data-dataid="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!-- <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div> -->
                <div class="modal-body h4">
                    Are you sure you want to delete this RIPAAP record?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="deleteDataBtn"
                        data-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </div>


    <!--ADD DATA MODAL-->
    <div class="modal fade" id="addDataModal" tabindex="-1" role="dialog" aria-labelledby="addData"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="#" method="POST" id="addDataForm">
                    <input type="hidden" name="token" id="token" value="<%= token %>" hidden>
                    <div class="modal-header">
                        <h5 class="modal-title" id="addDataModalLabel">Add New Data</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body h4">


                        <div class="input-group mb-3 w-100">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="testnameLable">Test Name</span>
                            </div>
                            <input type="text" class="form-control" placeholder="Name"
                                aria-label="testName" aria-describedby="testnameLable"
                                name="testName" id="testName" required>
                        </div>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="units">Units</span>
                            </div>
                            <input type="text" class="form-control" name="si" id="si"
                                placeholder="SI Unit" required>
                            <input type="text" class="form-control" name="conventional"
                                id="conventional" placeholder="Convention Unit">
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary discard-form"
                            data-form="addDataForm" data-dismiss="modal">Discard</button>
                        <input type="submit" class="btn btn-danger" id="addDataBtn"
                            value="Save"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!--EDIT DATA MODAL-->
    <div class="modal fade" id="editDataModal" tabindex="-1" role="dialog"
        aria-labelledby="editData" aria-hidden="true" data-dataid="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form action="#" method="POST" id="editDataForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addDataModalLabel">Edit Data</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body h4">

                        <!-- Edit form inputs -->


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary discard-form"
                            data-form="editDataForm" data-dismiss="modal">Discard</button>
                        <input type="submit" class="btn btn-danger" id="editDataBtn"
                            value="Save"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>